<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChatWindowActivity" >

    <TextView
        android:id="@+id/tvChatItemNotificationCount"
        android:layout_width="@dimen/notifications_width"
        android:layout_height="@dimen/chat_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="2" />

    <TextView
        android:id="@+id/tvChatItemChatTopic"
        android:layout_width="@dimen/chat_topic_width"
        android:layout_height="@dimen/chat_height"
        android:layout_toLeftOf="@+id/btnChatItemTimebomb"
        android:layout_toRightOf="@+id/tvChatItemNotificationCount"
        android:text="smelly coworkers" />

    <ImageView
        android:id="@+id/btnChatItemTimebomb"
        android:layout_width="@dimen/timer_width"
        android:layout_height="@dimen/chat_height"
        android:layout_alignBottom="@+id/tvChatItemChatTopic"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/empty"
        android:src="@drawable/bombcountdown" />

</RelativeLayout>
