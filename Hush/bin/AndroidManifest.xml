<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hush"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hush.activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hush.activities.ChatsListActivity"
            android:label="@string/title_activity_all_chats" >
        </activity>
        <activity
            android:name="com.hush.activities.NewChatTopicActivity"
            android:label="@string/title_activity_new_chat_topic" >
        </activity>
        <activity
            android:name="com.hush.activities.InviteFriendsActivity"
            android:label="@string/title_activity_invite_friends" >
        </activity>
        <activity
            android:name="com.hush.activities.ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
    </application>

</manifest>
